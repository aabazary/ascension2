{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**",
        "maxDuration": 30
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/mages/(.*)",
      "dest": "/frontend/dist/mages/$1"
    },
    {
      "src": "/dragons/(.*)",
      "dest": "/frontend/dist/dragons/$1"
    },
    {
      "src": "/dragonling/(.*)",
      "dest": "/frontend/dist/dragonling/$1"
    },
    {
      "src": "/armor/(.*)",
      "dest": "/frontend/dist/armor/$1"
    },
    {
      "src": "/spells/(.*)",
      "dest": "/frontend/dist/spells/$1"
    },
    {
      "src": "/ascenion/(.*)",
      "dest": "/frontend/dist/ascenion/$1"
    },
    {
      "src": "/screenshots/(.*)",
      "dest": "/frontend/dist/screenshots/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
